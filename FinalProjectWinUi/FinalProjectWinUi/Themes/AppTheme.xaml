<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryBackground">#1A1A1A</Color>
    <Color x:Key="SecondaryBackground">#2C3639</Color>
    <Color x:Key="AccentColor">#DCD7C9</Color>
    <Color x:Key="SecondaryAccent">#A27B5C</Color>
    <Color x:Key="TextColor">#DCD7C9</Color>
    <Color x:Key="SecondaryText">#A27B5C</Color>
    <Color x:Key="ErrorColor">#B00020</Color>
    <Color x:Key="SuccessColor">#2E7D32</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{ThemeResource PrimaryBackground}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{ThemeResource SecondaryBackground}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{ThemeResource AccentColor}"/>
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="{ThemeResource SecondaryAccent}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{ThemeResource TextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{ThemeResource SecondaryText}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{ThemeResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{ThemeResource SuccessColor}"/>

    <!-- Text Styles -->
    <x:Double x:Key="LargeTitleFontSize">32</x:Double>
    <x:Double x:Key="TitleFontSize">24</x:Double>
    <x:Double x:Key="SubtitleFontSize">20</x:Double>
    <x:Double x:Key="BodyFontSize">16</x:Double>
    <x:Double x:Key="CaptionFontSize">14</x:Double>

    <!-- Common Styles -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{ThemeResource LargeTitleFontSize}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="32,32,0,0"/>
    </Style>

    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{ThemeResource TitleFontSize}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="25,0"/>
    </Style>

    <!-- Form Styles -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource SecondaryBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
        <Setter Property="FontSize" Value="{ThemeResource BodyFontSize}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{ThemeResource SecondaryBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
        <Setter Property="FontSize" Value="{ThemeResource BodyFontSize}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="FormDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Background" Value="{ThemeResource SecondaryBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
        <Setter Property="FontSize" Value="{ThemeResource BodyFontSize}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Button Styles -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource SecondaryAccentBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="{ThemeResource BodyFontSize}"/>
    </Style>

    <Style x:Key="AccentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource SecondaryBackground}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="{ThemeResource BodyFontSize}"/>
    </Style>

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SecondaryBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Content Dialog Style -->
    <Style x:Key="ContentDialogStyle" TargetType="ContentDialog">
        <Setter Property="Background" Value="{ThemeResource PrimaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
    </Style>

    <!-- Navigation Styles -->
    <Style x:Key="NavigationViewStyle" TargetType="NavigationView">
        <Setter Property="Background" Value="{ThemeResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
    </Style>

    <!-- NavigationViewItem Style -->
    <Style x:Key="NavigationViewItemStyle" TargetType="NavigationViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
    </Style>

    <!-- NavigationViewItem Selection Style -->
    <Style x:Key="NavigationViewItemSelectionStyle" TargetType="NavigationViewItem">
        <Setter Property="Background" Value="{ThemeResource SecondaryAccentBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextBrush}"/>
    </Style>

</ResourceDictionary> 