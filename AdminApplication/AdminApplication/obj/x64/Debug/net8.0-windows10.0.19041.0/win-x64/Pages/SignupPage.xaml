<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AdminApplication.Pages.SignupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdminApplication.Pages"
    Background="#1E1E1E">

    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Spacing="40">
            <!-- Logo and Title Section -->
            <StackPanel Spacing="20" 
                       HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE8D5;" 
                         FontSize="64" 
                         Foreground="#007ACC"/>
                <TextBlock Text="Create Admin Account" 
                         FontSize="24"
                         FontWeight="SemiBold"
                         Foreground="White" 
                         HorizontalAlignment="Center"/>
                <TextBlock Text="Funeral Services Administration" 
                         FontSize="14"
                         Foreground="#CCCCCC" 
                         HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Signup Form -->
            <StackPanel Width="400" 
                       Spacing="20">
                <TextBox x:ConnectionId='2' x:Name="FirstNameTextBox" 
                        PlaceholderText="First Name"
                        Background="#2D2D2D"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,8"/>
                
                <TextBox x:ConnectionId='3' x:Name="LastNameTextBox" 
                        PlaceholderText="Last Name"
                        Background="#2D2D2D"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,8"/>
                
                <TextBox x:ConnectionId='4' x:Name="UsernameTextBox" 
                        PlaceholderText="Username"
                        Background="#2D2D2D"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,8"/>
                
                <PasswordBox x:ConnectionId='5' x:Name="PasswordBox" 
                           PlaceholderText="Password"
                           Background="#2D2D2D"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="12,8"/>
                
                <PasswordBox x:ConnectionId='6' x:Name="ConfirmPasswordBox" 
                           PlaceholderText="Confirm Password"
                           Background="#2D2D2D"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="12,8"/>

                <TextBlock x:ConnectionId='7' x:Name="ErrorText" 
                          Foreground="#F44336"
                          TextWrapping="Wrap" 
                          Visibility="Collapsed"/>

                <Button x:ConnectionId='8' Content="Create Account" 
                                                  
                        Background="#007ACC"
                        Foreground="White"
                        Padding="12,8"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Spacing="4">
                    <TextBlock Text="Already have an account?" 
                             Foreground="#CCCCCC"/>
                    <HyperlinkButton x:ConnectionId='9' Content="Sign in" 
                                                          
                                   Foreground="#007ACC"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

