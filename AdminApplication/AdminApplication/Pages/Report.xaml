<Page
    x:Class="AdminApplication.Pages.Report"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdminApplication.Pages"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    Background="#1A1A1A">

    <Page.Resources>
        <SolidColorBrush x:Key="DarkPrimaryColor" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="DarkSecondaryColor" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="DarkAccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="DarkTextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkCardBackground" Color="#2D2D2D"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section with Dark Gradient -->
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1A1A1A" Offset="0"/>
                    <GradientStop Color="#2D2D2D" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <Grid Padding="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Funeral Services Report" 
                             FontSize="24" 
                             FontWeight="SemiBold" 
                             Foreground="#FFFFFF"/>
                    <TextBlock Text="Track and manage funeral service operations" 
                             FontSize="14" 
                             Foreground="#CCCCCC" 
                             Opacity="0.8"
                             Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          Spacing="10" 
                          VerticalAlignment="Center">
                    <ComboBox x:Name="DateRangeComboBox" 
                             Width="130" 
                             PlaceholderText="Select Period"
                             Background="#2D2D2D"
                             Foreground="#FFFFFF"
                             BorderBrush="#404040">
                        <ComboBoxItem Content="Weekly"/>
                        <ComboBoxItem Content="Monthly"/>
                        <ComboBoxItem Content="Yearly"/>
                    </ComboBox>
                    <Button Content="Generate Report" 
                            Click="OnGetReportClicked" 
                            Background="#007ACC"
                            Foreground="#FFFFFF"
                            BorderBrush="#007ACC"
                            Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="15">
            <StackPanel Spacing="15">
                <!-- Financial Summary Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Services Card -->
                    <Border Grid.Column="0" 
                            Background="#2D2D2D"
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,7,0"
                            BorderThickness="1"
                            BorderBrush="#404040">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Services" 
                                         FontWeight="SemiBold" 
                                         FontSize="14"
                                         Foreground="#FFFFFF"/>
                                <TextBlock x:Name="TotalSalesText" 
                                         FontSize="24" 
                                         Foreground="#007ACC" 
                                         FontWeight="Bold"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                            <PathIcon Grid.Row="1" 
                                     Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6M12,8A4,4 0 0,0 8,12A4,4 0 0,0 12,16A4,4 0 0,0 16,12A4,4 0 0,0 12,8Z"
                                     Foreground="#007ACC"
                                     Opacity="0.2"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Bottom"
                                     Width="48"
                                     Height="48"/>
                        </Grid>
                    </Border>

                    <!-- Total Payments Card -->
                    <Border Grid.Column="1" 
                            Background="#2D2D2D"
                            CornerRadius="8" 
                            Padding="15"
                            Margin="7,0"
                            BorderThickness="1"
                            BorderBrush="#404040">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Payments" 
                                         FontWeight="SemiBold" 
                                         FontSize="14"
                                         Foreground="#FFFFFF"/>
                                <TextBlock x:Name="TotalPaymentsText" 
                                         FontSize="24" 
                                         Foreground="#007ACC" 
                                         FontWeight="Bold"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                            <PathIcon Grid.Row="1" 
                                     Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6M12,8A4,4 0 0,0 8,12A4,4 0 0,0 12,16A4,4 0 0,0 16,12A4,4 0 0,0 12,8Z"
                                     Foreground="#007ACC"
                                     Opacity="0.2"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Bottom"
                                     Width="48"
                                     Height="48"/>
                        </Grid>
                    </Border>

                    <!-- Outstanding Balance Card -->
                    <Border Grid.Column="2" 
                            Background="#2D2D2D"
                            CornerRadius="8" 
                            Padding="15"
                            Margin="7,0,0,0"
                            BorderThickness="1"
                            BorderBrush="#404040">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel>
                                <TextBlock Text="Outstanding Balance" 
                                         FontWeight="SemiBold" 
                                         FontSize="14"
                                         Foreground="#FFFFFF"/>
                                <TextBlock x:Name="OutstandingBalancesText" 
                                         FontSize="24" 
                                         Foreground="#007ACC" 
                                         FontWeight="Bold"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                            <PathIcon Grid.Row="1" 
                                     Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6M12,8A4,4 0 0,0 8,12A4,4 0 0,0 12,16A4,4 0 0,0 16,12A4,4 0 0,0 12,8Z"
                                     Foreground="#007ACC"
                                     Opacity="0.2"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Bottom"
                                     Width="48"
                                     Height="48"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Charts Section -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Service Type Analysis" 
                             FontSize="20" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,10"
                             Foreground="#FFFFFF"/>

                    <Border Grid.Row="1" 
                            Background="#2D2D2D"
                            CornerRadius="8"
                            Padding="15"
                            BorderThickness="1"
                            BorderBrush="#404040">
                        <lvc:CartesianChart x:Name="PlanSalesChart" 
                                          Height="350"/>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
